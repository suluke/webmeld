extends layout.pug
block head-content
  link(rel='stylesheet' href='/static/highlight/default.css')
block content
  a(href='..') ..
  each content in contents
    pre
      code(class='lang-'+fileExt) #{content}
  script(src=baseUrl+'/static/diff.min.js')
  script(src=baseUrl+'/static/highlight.min.js')
  script.
    (function() {
      const docs = Array.from(document.querySelectorAll('pre > code')).map(codeTag => codeTag.textContent);
      const diff = Diff.diffLines(docs[0], docs[1]);
      console.log(diff);
      hljs.initHighlightingOnLoad();
    })();
